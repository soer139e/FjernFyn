<Window x:Class="fjernfyn.Views.ReadInquiryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fjernfyn.Views"
        mc:Ignorable="d"
        Title="ReadInquiryWindow" Height="500" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Assets/icons/bgicon.png" Stretch="Uniform" Opacity="0.25"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="System" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <Label Content="Prioritet" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" FontWeight="Bold" Grid.Column="1" FontSize="20"/>
        <Label Content="Feedbacktype" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" FontWeight="Bold" Grid.Column="2" FontSize="20"/>
        <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="60,25,58,27"/>
        <TextBox Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="1" Margin="60,0,58,0"/>
        <Label Grid.Row="2" Grid.Column="2" Margin="33,103,33,51" Content="Fejlkode" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold"/>
        <Label Grid.Row="2" Grid.Column="2" Margin="33,147,33,10" FontSize="20"/>
        <Button Content="Tilbage" Grid.Column="2" Grid.Row="3" Margin="33,39,164,10" Width="70"/>
        <Button Content="Marker som udført" Grid.Column="2" Grid.Row="3" Margin="142,39,10,10" Width="115"/>


        <Button Name ="Slet" Width="100" Height='100' Command="{Binding SendEmailCommand}"/>
    </Grid>
</Window>
