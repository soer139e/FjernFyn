
    <Page x:Class="fjernfyn.Views.InquiryOverview"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fjernfyn.Views"
      xmlns:main ="clr-namespace:fjernfyn"  
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InquiryOverview"
      ShowsNavigationUI="False">
      
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListView ItemsSource="{Binding Feedbacks, Mode=TwoWay}" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3" FontSize="20" SelectedItem="{Binding SelectedInquiry , Mode=TwoWay, UpdateSourceTrigger=Default}"> 
            <ListView.View>
                <GridView>
                    <GridViewColumn Header ="Title"  
                                      DisplayMemberBinding="{Binding Path=Title}" Width="auto" />
                    <GridViewColumn Header="System" 
                                    DisplayMemberBinding="{Binding Path=SoftwareProp.Name}" Width="auto"/>
                    <GridViewColumn Header ="Priority" 
                                      DisplayMemberBinding="{Binding Path=Priority}" Width="auto"/>
                    <GridViewColumn Header ="Type" 
                                      DisplayMemberBinding="{Binding Path=Type}" Width="auto"/>
                    <GridViewColumn Header ="CreationDate"
                                        DisplayMemberBinding="{Binding Path=CreationDate}" Width="auto"/>

                </GridView>
            </ListView.View>
        </ListView>

        <Button Command="{Binding DeleteInquiryCommand}" Padding="4" Grid.Column="1" Content="Slet" HorizontalAlignment="Left" Margin="55,74,0,0" Grid.Row="3" VerticalAlignment="Top" Width="78" FontSize="20"/>
        <Button Command="{Binding MarkedAsDoneCommand}" Padding="4" Grid.Column="1" Content="Marker som udført" HorizontalAlignment="Left" Margin="153,74,0,0" VerticalAlignment="Top" Grid.Row="3" Width="197" FontSize="20" Grid.ColumnSpan="2"/>
        <Button Padding="4" Grid.Column="2" Content="Åbn" HorizontalAlignment="Left" Margin="103,74,0,0" VerticalAlignment="Top" Grid.Row="3" Width="77" FontSize="20" Click="Button_Click"/>


        <ComboBox IsEditable="True" IsReadOnly="True" Text="Prioritet" Grid.Column="1" HorizontalAlignment="Left" 
                  Margin="0,32,0,0" VerticalAlignment="Top" Width="120" FontSize="20"
                  ItemsSource="{Binding Path=Prioritys}"
                  SelectedItem="{Binding SelectedPriority, Mode=TwoWay}"
                  />

        <ComboBox IsEditable="True" IsReadOnly="True" Text="Category" Grid.Column="1" HorizontalAlignment="Left" 
                  Margin="171,32,0,0" VerticalAlignment="Top" Width="120" FontSize="20" Grid.ColumnSpan="2"
                  
                  ItemsSource="{Binding Path=Categorys}"
                        SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"/>

        


        <ComboBox IsEditable="True" IsReadOnly="True" Text="All" HorizontalAlignment="Left" Margin="98,32,0,0" VerticalAlignment="Top" 
                  Width="120" FontSize="20" ItemsSource="{Binding Path=Softwares}"
                  SelectedItem="{Binding SelectedSoftware, Mode=TwoWay}"/>


        <ComboBox Name="DateFilter" IsEditable="True" IsReadOnly="True" Text="Dato" Grid.Column="2" HorizontalAlignment="Left" Margin="60,32,0,0" VerticalAlignment="Top" Width="120" FontSize="20" SelectedItem="{Binding SelectedDateFilter}" 
                  ItemsSource="{Binding DateFilters}"/>


    </Grid>

</Page>
